#Make the custom toolchain first from the android NDK
#$NDK/build/tools/make_standalone_toolchain.py \
#    --arch arm --api 14 --install-dir /tmp/my-android-toolchain

current_dir = $(shell pwd)
BASE=/home/pwrobel/toolchains/arm-14
STRIP=$(BASE)/bin/arm-linux-androideabi-strip
CFLAGS_ARM=-I. -I$(BASE)/include/c++/4.9.x/bits/ -Wall -march=armv7-a -mfloat-abi=softfp -mfpu=vfpv3-d16
CPP_ARM=$(BASE)/bin/arm-linux-androideabi-g++
STRIP_ARM=$(BASE)/bin/arm-linux-androideabi-strip
LIBQRENCODER_LIBFOLDERNAME=libqrencode
LIBZXING=../zxing-cpp/core/src

clean:
	rm bin_fec_armv7a/test_single rm bin_fec_armv7a/decoder_test bin_fec_armv7a/main_arm bin_fec_armv7a/libqrencoder* *.o *.so main bin_fec_armv7a/libRSencoder.so bin_fec_armv7a/libRSdecoder.so 
fec_arm_test: single_fac_test.cpp
	$(CPP_ARM) $(CFLAGS_ARM) -DANDROID -pie single_fac_test.cpp -Wl,-rpath=\$$ORIGIN -o bin_fec_armv7a/test_single -L$(current_dir)/bin_fec_armv7a -lfec 
arm_lib: open_rs_encoder.cpp qr_frame_producer.cpp fileutil/fileops.cpp libqrencode_wrapper_arm
	$(CPP_ARM) $(CFLAGS_ARM) -I$(current_dir) -I$(current_dir)/libqrencoder_wrapper -fPIC -DANDROID -O2 -shared open_rs_encoder.cpp qr_frame_producer.cpp fileutil/fileops.cpp hash-library/sha256.cpp -o bin_fec_armv7a/libRSencoder.so -L$(current_dir)/bin_fec_armv7a -lfec -lqrencoder_wrapper
	$(STRIP) $(current_dir)/bin_fec_armv7a/libRSencoder.so
main_arm: arm_lib main.cpp
	$(CPP_ARM) $(CFLAGS_ARM) -DANDROID -pie -I$(current_dir) -O2 main.cpp -o bin_fec_armv7a/main_arm -Wl,-rpath=\$$ORIGIN -L$(current_dir)/bin_fec_armv7a -lRSencoder
	
libqrencode_wrapper_arm:
	$(CPP_ARM) $(CFLAGS_ARM)  -O2 -fPIC -DSTATIC_IN_RELEASE=static -DMAJOR_VERSION=1 -DMINOR_VERSION=1 -DVERSION=\"1\" -DMICRO_VERSION=1 -I$(current_dir) -I$(current_dir)/.. -I$(current_dir)/../$(LIBQRENCODER_LIBFOLDERNAME) -I$(current_dir)/libqrencoder_wrapper libqrencoder_wrapper/libqrencoder_wrapper.cpp $(current_dir)/bin_jpeg/arch_armv7a/libjpeg.a -I$(current_dir)/zxing_lib/arch_armv7a $(current_dir)/zxing_lib/arch_armv7a/iconv.c -I$(current_dir)/$(LIBZXING) -I$(current_dir)/zxing_lib $(current_dir)/zxing_lib/BufferBitmapSource.cpp -fpermissive $(current_dir)/zxing_lib/arch_armv7a/libzxing.a $(current_dir)/../$(LIBQRENCODER_LIBFOLDERNAME)/*.c -fPIC -shared -o $(current_dir)/bin_fec_armv7a/libqrencoder_wrapper.so 
	$(STRIP_ARM) $(current_dir)/bin_fec_armv7a/libqrencoder_wrapper.so
	$(CPP_ARM) $(CFLAGS_ARM)  -O2 -I$(current_dir) -I$(current_dir)/libqrencoder_wrapper libqrencoder_wrapper/libqrencoder_wrapper_test.cpp -pie -o $(current_dir)/bin_fec_armv7a/libqrencoder_test -L$(current_dir)/bin_fec_armv7a -lqrencoder_wrapper

arm_decoder_lib: libqrencode_wrapper_arm decoder/qr_frame_decoder.cpp decoder/rs_decoder.cpp
	$(CPP_ARM) $(CFLAGS_ARM) -O2 -I$(current_dir) -I$(current_dir)/fec_include -I$(current_dir)/decoder decoder/qr_frame_decoder.cpp $(current_dir)/decoder/rs_decoder.cpp $(current_dir)/fileutil/fileops.cpp $(current_dir)/hash-library/sha256.cpp -shared -fPIC -o $(current_dir)/bin_fec_armv7a/libRSdecoder.so -L$(current_dir)/bin_fec_armv7a -lfec -lqrencoder_wrapper
	$(STRIP) $(current_dir)/bin_fec_armv7a/libRSdecoder.so
arm_decoder_test: arm_decoder_lib decoder/decoder_test.cpp 
	$(CPP_ARM) $(CFLAGS_ARM) -O2 -I$(current_dir) -I$(current_dir)/decoder decoder/decoder_test.cpp -pie -o $(current_dir)/bin_fec_armv7a/decoder_test -L$(current_dir)/bin_fec_armv7a -lRSdecoder -lqrencoder_wrapper
	
all:  arm_lib main_arm libqrencode_wrapper_arm  arm_decoder_test fec_arm_test



