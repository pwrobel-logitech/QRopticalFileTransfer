<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="qrfiles.pwrobel.myapplication" >

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <uses-feature android:name="android.hardware.camera" android:required="true"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/appico"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/appico"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Qrfiles"
            android:label="@string/app_name"
            android:exported="true"
            android:theme="@style/pwrobel_theme1"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />



            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="file"  android:pathPattern=".*" android:mimeType="*/*"  />
            </intent-filter>
        </activity>
    </application>

</manifest>