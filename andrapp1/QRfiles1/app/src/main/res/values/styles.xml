<resources>

    <style name="PopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/colorlightgrey2</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorgrey1</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="pwrobel_theme1" parent="AppTheme.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:panelBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorgrey1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#333333</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#333333</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorlightgrey2</item>
    </style>


    <style name="SettingFragmentDialog" parent="Theme.AppCompat.Light.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">#333333</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:textColor">#333333</item>
        <!-- Used for the background -->
        <item name="android:background">@color/greyC</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">false</item>

    </style>

    <style name="SettingFragmentDialogNoFullScreen" parent="Theme.AppCompat.Light.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">#333333</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:textColor">#333333</item>
        <!-- Used for the background -->
        <item name="android:background">@color/greyC</item>

        <item name="android:windowFullscreen">false</item>

        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>

    </style>


</resources>
